{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "Modules/*": ["../src/*"]
    },
    "declaration": false,
    "allowJs": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
    "noFallthroughCasesInSwitch": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src"
  ]
}
